<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">
        <header>
            <%- include('../partials/header'); %>
        </header>
        <main>
            <div class="jumbotron">
                <p id="stand_name">Stand name: <b><%= stand_name %></b> </p>
                <p id="stand_desc">Stand power: <%= stand_desc %> </p>

                <button id="refresh-button">GET NEW STAND</button>

                <script>
                    document.getElementById('refresh-button').addEventListener('click', function() {
                        function refreshPage() {
                            window.location.reload();
                        }
                        refreshPage();
                    });
                </script>
            </div>
        </main>
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>